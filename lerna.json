  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "0.1.0",
  "packages": ["packages/*"],
  "command": {
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "chore(release): publish version %s"
